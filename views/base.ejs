<%-include('header')-%>
  
<div class="text-center center-div" id="login">
  <div class="container w-25 border-0 py-2">
    <div class="title pb-4">
      <h2 class="font-weight-bold">Login system</h2>
      <span>login for the existing user</span>
      <% if(locals.logout){%>
           <div class="alert alert-success text-center">
             <%=logout%>
           </div>
        <%}%>
        <% if(locals. message){%>
          <div class="alert alert-warning text-center">
            <%= message%>
          </div>
       <%}%>
    </div>
    <form action="/route/login" method="post" class="pt-3">
      <div class="form-group pb-3">
        <input type="email" class="form-control" placeholder="email" name="email">
        <small class="text-start form-text  text-muted pe-5 ">Register email address</small>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="password" name="password">
      </div>
      <div class="pt-4 form-group">
      <button type="submit"class="btn btn-success rounded-pill">Submit</button>
    </div>
    </form>
  </div>
</div>














<%-include('footer')-%>